<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MyPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/photo8"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:text="해군3대장님"
                android:textSize="25dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_my_page_review_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="리뷰리스트로"
                android:textColor="@android:color/black"
                android:backgroundTint="#FFFFFF"/>

            <Button
                android:id="@+id/btn_my_page_reservation_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="예약 내역"
                android:textColor="@android:color/black"
                android:backgroundTint="#FFFFFF"/>

            <Button
                android:id="@+id/btn_my_page_wish_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="찜 목록"
                android:textColor="@android:color/black"
                android:backgroundTint="#FFFFFF"/>

            <Button
                android:id="@+id/btn_my_page_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="회원 정보"
                android:textColor="@android:color/black"
                android:backgroundTint="#FFFFFF"/>

            <Button
                android:id="@+id/btn_my_page_recent_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="최근 본 내역"
                android:textColor="@android:color/black"
                android:backgroundTint="#FFFFFF"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>