<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.wish.WishListFragment"
    android:id="@+id/WishListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_wish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/arrow_up_float"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view_wish"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_to_product_list_imsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="상품리스트로"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view_wish"
        app:layout_constraintEnd_toStartOf="@+id/floatingActionButton" />

    <Button
        android:id="@+id/btn_to_product_detail_imsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품상세"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view_wish"
        app:layout_constraintEnd_toStartOf="@+id/btn_to_product_list_imsi" />
</androidx.constraintlayout.widget.ConstraintLayout>