<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.review.ReviewListFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/review_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_review_list_go_list_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFFFFF"
        android:background="@drawable/circle"
        android:clickable="true"
        android:src="@drawable/baseline_keyboard_arrow_up_24"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/review_list_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="30dp"
        app:shapeAppearanceOverlay="?attr/shapeAppearanceCornerExtraLarge"
        />
</androidx.constraintlayout.widget.ConstraintLayout>