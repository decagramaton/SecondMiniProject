<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.productDetail.ProductDetailBottomSheetFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="성인 \n"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/product_detail_bottom_sheet_adult_price"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:text="769,000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FF6F0F"
                android:gravity="center_vertical|end"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="원"
                android:textSize="16dp"
                android:textColor="#FF6F0F"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/btn_product_detail_bottom_sheet_adult_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_minus_64dp"
                    android:contentDescription="이건 마이너스"/>

                <TextView
                    android:id="@+id/product_detail_bottom_sheet_adult_number"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/btn_product_detail_bottom_sheet_adult_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_plus_64dp"
                    android:contentDescription="이건 플러스"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#30000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="아동 \n"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/product_detail_bottom_sheet_child_price"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:text="749,000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FF6F0F"
                android:gravity="center_vertical|end"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="원"
                android:textSize="16dp"
                android:textColor="#FF6F0F"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/btn_product_detail_bottom_sheet_child_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_minus_64dp"
                    android:contentDescription="이건 마이너스"/>

                <TextView
                    android:id="@+id/product_detail_bottom_sheet_child_number"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/btn_product_detail_bottom_sheet_child_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_plus_64dp"
                    android:contentDescription="이건 플러스"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#30000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="#20FF6F0F">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="총 금액"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/product_detail_bottom_sheet_total_price"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:text="749,000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#FF6F0F"
                android:gravity="center_vertical|end"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="원"
                android:textSize="20dp"
                android:textColor="#FF6F0F"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="#FF6F0F">

            <TextView
                android:id="@+id/btn_product_detail_bottom_sheet_make_reservation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="예약하기"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="10dp"/>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>