<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.productDetail.ProductDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="#FFFFFF">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/detail_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <!--<ImageView
                android:id="@+id/main_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/photo11"
                android:contentDescription="mainImage"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:gravity="center_vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RatingBar
                        android:id="@+id/rating"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:numStars="5"
                        android:progressTint="@android:color/holo_orange_dark"
                        android:rating="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        app:srcCompat="@drawable/ic_chat_24dp"
                        android:contentDescription="리뷰 수"/>

                    <TextView
                        android:id="@+id/rating_count_by_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="211" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="리뷰수" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        app:srcCompat="@drawable/ic_airplane_ticket_24dp"
                        android:contentDescription="예약 수"/>

                    <TextView
                        android:id="@+id/orderCountByProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="42" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="예약 수" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[MD강력추천] 오사카패키지의 정석"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">



                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="589,870"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginStart="30dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/btn_product_detail_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="7"
                    android:backgroundTint="#163172"
                    android:text="예약하기"
                    android:textStyle="bold"/>

                <CheckBox
                    android:id="@+id/btn_product_detail_wish"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:contentDescription="Wish"
                    android:onClick="startShakeAnimation"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/click_wish_button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여행 기간"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#1E56A0"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:id="@+id/travel_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4박 5일"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_dark"
                    android:layout_marginStart="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이용 교통"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#1E56A0"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:id="@+id/travel_transportation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아시아나 항공"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_dark"
                    android:layout_marginStart="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방문 지역"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#1E56A0"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:id="@+id/travel_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="일본 오사카"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_dark"
                    android:layout_marginStart="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약 현황"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#1E56A0"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:id="@+id/travel_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3개 남음"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_dark"
                    android:layout_marginStart="50dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/travel_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/travel_detail_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>